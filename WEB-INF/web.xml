<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
   xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
   version="4.0">
    <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
    <servlet>
        <servlet-name>Language</servlet-name>
        <servlet-class>Language</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Language</servlet-name>
        <url-pattern>/Language</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <error-page>
        <error-code>500</error-code>
        <location>/Server-Error.jsp</location>
    </error-page>
    <error-page>
        <error-code>404</error-code>
        <location>/PageNotFound.jsp</location>
    </error-page>
    <error-page>
        <exception-type>java.lang.Exception</exception-type>
        <location>/PageNotFound.jsp</location>
    </error-page> 
 
<servlet>   
  <servlet-name>MainPage</servlet-name>
  <jsp-file>/index.jsp</jsp-file>
</servlet>
<servlet-mapping>
  <servlet-name>MainPage</servlet-name>
  <url-pattern>/MainPage</url-pattern>
</servlet-mapping>
<servlet>   
  <servlet-name>documents</servlet-name>
  <jsp-file>/documents.jsp</jsp-file>
</servlet>
<servlet-mapping>
  <servlet-name>documents</servlet-name>
  <url-pattern>/documents</url-pattern>
</servlet-mapping>
  <servlet>   
  <servlet-name>PageNotFound</servlet-name>
  <jsp-file>/PageNotFound.jsp</jsp-file>
</servlet>
<servlet-mapping>
  <servlet-name>PageNotFound</servlet-name>
  <url-pattern>/PageNotFound</url-pattern>
</servlet-mapping> 
<servlet>   
  <servlet-name>Chocolate_Hopper</servlet-name>
  <jsp-file>/Chocolate_Hopper.jsp</jsp-file>
</servlet>
<servlet-mapping>
  <servlet-name>Chocolate_Hopper</servlet-name>
  <url-pattern>/Chocolate_Hopper</url-pattern>
</servlet-mapping>
  <servlet>   
  <servlet-name>Color_Cubes</servlet-name>
  <jsp-file>/Color_Cubes.jsp</jsp-file>
</servlet>
<servlet-mapping>
  <servlet-name>Color_Cubes</servlet-name>
  <url-pattern>/Color_Cubes</url-pattern>
</servlet-mapping>
</web-app>
